auto lo
iface lo inet loopback
    address 10.0.0.13/32
    clagd-vxlan-anycast-ip 10.0.0.41

auto eth0
iface eth0 inet dhcp
   vrf mgmt
   
auto mgmt
iface mgmt
   address 127.0.0.1/8
   vrf-table auto

# uplinks
auto swp51
iface swp51 
   mtu 9216

auto swp52
iface swp52
   mtu 9216

# peerlink
auto swp49
iface swp49
    post-up ip link set $IFACE promisc on     # Only required on VX

auto swp50
iface swp50
    post-up ip link set $IFACE promisc on     # Only required on VX

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    address 169.254.255.1
    netmask 255.255.255.0
    clagd-priority 4096
    clagd-peer-ip 169.254.255.2
    clagd-backup-ip 10.0.0.14
    clagd-sys-mac 44:38:39:ff:00:02

# bridge to hosts
auto swp1
iface swp1

auto server3
iface server3
    bond-slaves swp1
    clag-id 3
    bridge-pvid 10

auto swp2
iface swp2

auto vxlan10
iface vxlan10
    vxlan-id 10
    vxlan-local-tunnelip 10.0.0.13
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-remoteip 10.0.0.40

auto VxLanA-1
iface VxLanA-1
    bridge-ports vxlan10 peerlink server3
    bridge-stp on
    bridge-vids 10
    bridge-vlan-aware yes


